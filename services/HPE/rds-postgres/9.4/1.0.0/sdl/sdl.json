{
    "name": "rds-postgres",
    "product_version": "9.4",
    "sdl_version": "1.0.0",
    "vendor": "HPE",
    "volumes": [],
    "components": [
        {
            "name": "hsm-side-car",
            "workload_type": "container",
            "repository": "docker.io",
            "organization": "stackatodev",
            "image": "hsm-sidecar-dev-postgres",
            "tag": "latest",
            "min_RAM_mb": 50,
            "min_VCPU": 0.1,
            "max_VCPU": 0.5,
            "platform": "linux-x86_64",
            "capabilities": [],
            "affinity": [],
            "min_instances": 1,
            "max_instances": 1,
            "service_ports": [
                {
                    "name": "pgsql-sidecar",
                    "protocol": "TCP",
                    "source_port": 8081,
                    "target_port": 8081,
                    "public": false
                }
            ],
            "volume_mounts": [],
            "parameters": [
                {
                    "name": "SERVICE_POSTGRES_HOST"
                },
                {
                    "name": "SERVICE_POSTGRES_PORT"
                },
                {
                    "name": "SERVICE_POSTGRES_DBNAME"
                },
                {
                    "name": "SERVICE_POSTGRES_USER"
                },
                {
                    "name": "SERVICE_POSTGRES_PASSWORD"
                },
                {
                    "name": "SERVICE_POSTGRES_SSLMODE"
                },
                {
                    "name": "SIDECAR_API_KEY"
                },
                {
                    "name": "SIDECAR_CA_CERT"
                },
                {
                    "name": "tls-private-key-file"
                },
                {
                    "name": "tls-cert-file"
                }
            ]
        }
    ],
    "parameters": [
        {
            "name": "SERVICE_POSTGRES_HOST",
            "description": "RDS endpoint DNS Name for postgres database",
            "example": "postgres",
            "required": true,
            "secret": false,
            "data_type": "string"
        },
        {
            "name": "SERVICE_POSTGRES_PORT",
            "description": "RDS endpoint port for postgres database",
            "example": "postgres",
            "required": true,
            "secret": false,
            "data_type": "int32"
        },
        {
            "name": "SERVICE_POSTGRES_USER",
            "description": "Postgres master username",
            "example": "postgres",
            "required": true,
            "secret": false,
            "data_type": "string"
        },
        {
            "name": "SERVICE_POSTGRES_DBNAME",
            "description": "Postgres database name",
            "example": "postgres",
            "required": true,
            "secret": false,
            "data_type": "string"
        },
        {
            "name": "SERVICE_POSTGRES_PASSWORD",
            "description": "Postgres master password",
            "example": "changeme",
            "required": true,
            "secret": false,
            "data_type": "string"
        },
        {
            "name": "SERVICE_POSTGRES_SSLMODE",
            "description": "SSL for postgress connection",
            "example": "disable",
            "required": true,
            "secret": false,
            "default": "disable",
            "data_type": "string"
        },
        {
            "name": "SIDECAR_API_KEY",
            "description": "API Key used to authenticate consumers of the sidecar API",
            "example": "my-secret-key",
            "required": true,
            "secret": false,
            "data_type": "string"
        },
        {
            "name": "SIDECAR_CA_CERT",
            "description": "placeholder",
            "example": "-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----",
            "required": true,
            "secret": false,
            "generator": {
                "id": "cacert",
                "generate": {
                    "value_type": "certificate",
                    "type": "CACertificate"
                }
            }
        },
        {
            "name": "tls-private-key-file",
            "description": "Private certificate string for TLS with endlines preserved with '\n'",
            "example": "-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----",
            "required": false,
            "secret": true,
            "generator": {
                "id": "tls_cert",
                "generate": {
                    "value_type": "private_key",
                    "key_length": 4096,
                    "type": "Certificate"
                }
            }
        },
        {
            "name": "tls-cert-file",
            "description": "Public certificate string for TLS with endlines preserved with '\n'",
            "example": "-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----",
            "required": false,
            "secret": true,
            "generator": {
                "id": "tls_cert",
                "generate": {
                    "value_type": "certificate",
                    "type": "Certificate"
                }
            }
        }
    ]
}
