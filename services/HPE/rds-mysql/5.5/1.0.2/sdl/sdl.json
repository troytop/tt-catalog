{
    "name": "rds-mysql",
    "product_version": "5.5",
    "sdl_version": "1.0.2",
    "vendor": "HPE",
    "volumes": [],
    "components": [
        {
            "name": "hsm-side-car",
            "workload_type": "container",
            "version": "1.0.2",
            "vendor": "HPE",
            "repository": "docker-registry.helion.space:443",
            "image": "hsm-sidecar/sidecar-dev-mysql:1.0.2",
            "min_RAM_mb": 50,
            "min_disk_gb": 1,
            "min_VCPU": 1,
            "platform": "linux-x86_64",
            "capabilities": [],
            "affinity": [],
            "labels": [
                "mysql-hsm-side-car"
            ],
            "min_instances": 1,
            "max_instances": 1,
            "service_ports": [
                {
                    "name": "mysql-sidecar",
                    "protocol": "TCP",
                    "source_port": 8081,
                    "target_port": 8081,
                    "public": false
                }
            ],
            "volume_mounts": [],
            "parameters": [
                {
                    "name": "SERVICE_MYSQL_HOST"
                },
                {
                    "name": "SERVICE_MYSQL_PORT"
                },
                {
                    "name": "SERVICE_MYSQL_USER"
                },
                {
                    "name": "SERVICE_MYSQL_PASS"
                },
                {
                    "name": "SIDECAR_API_KEY"
                },
                {
                    "name": "SIDECAR_CA_CERT"
                },
                {
                    "name": "tls-private-key-file"
                },
                {
                    "name": "tls-cert-file"
                }
            ]
        }
    ],
    "parameters": [
        {
            "name": "SERVICE_MYSQL_HOST",
            "description": "RDS endpoint DNS name for MySQL database",
            "example": "mysql",
            "required": true,
            "secret": false
        },
        {
            "name": "SERVICE_MYSQL_PORT",
            "description": "RDS endpoint port for MySQL database",
            "example": "3306",
            "default": "3306",
            "required": true,
            "secret": false
        },
        {
            "name": "SERVICE_MYSQL_USER",
            "description": "MySQL user used by the sidecar",
            "example": "root",
            "required": true,
            "secret": false
        },
        {
            "name": "SERVICE_MYSQL_PASS",
            "description": "MySQL password used by the sidecar",
            "example": "changeme",
            "required": true,
            "secret": false
        },
        {
            "name": "SIDECAR_API_KEY",
            "description": "API Key used to authenticate consumers of the sidecar API",
            "example": "my-secret-key",
            "required": true,
            "secret": false
        },
        {
            "name": "SIDECAR_CA_CERT",
            "description": "placeholder",
            "example": "-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----",
            "required": true,
            "secret": false,
            "generator": {
                "id": "cacert",
                "generate": {
                    "value_type": "certificate",
                    "type": "CACertificate"
                }
            }
        },
        {
            "name": "tls-private-key-file",
            "description": "Private certificate string for TLS with endlines preserved with '\n'",
            "example": "-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----",
            "required": false,
            "secret": true,
            "generator": {
                "id": "tls_cert",
                "generate": {
                    "value_type": "private_key",
                    "key_length": 4096,
                    "type": "Certificate"
                }
            }
        },
        {
            "name": "tls-cert-file",
            "description": "Public certificate string for TLS with endlines preserved with '\n'",
            "example": "-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----",
            "required": false,
            "secret": true,
            "generator": {
                "id": "tls_cert",
                "generate": {
                    "value_type": "certificate",
                    "type": "Certificate"
                }
            }
        }
    ]
}
