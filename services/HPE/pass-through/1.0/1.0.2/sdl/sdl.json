{
    "name": "pass-through",
    "product_version": "1.0",
    "sdl_version": "1.0.2",
    "vendor": "HPE",
    "volumes": [],
    "components": [
        {
            "name": "hsm-side-car",
            "version": "1.0.2",
            "vendor": "HPE",
            "repository": "docker-registry.helion.space:443",
            "image": "hsm-sidecar/sidecar:1.0.2",
            "min_RAM_mb": 50,
            "min_disk_gb": 1,
            "min_VCPU": 1,
            "platform": "linux-x86_64",
            "workload_type": "container",
            "capabilities": [],
            "min_instances": 1,
            "max_instances": 1,
            "service_ports": [
                {
                    "name": "hsm-side-car",
                    "protocol": "TCP",
                    "source_port": 8081,
                    "target_port": 8081,
                    "public": false
                }
            ],
            "parameters": [
                {
                    "name": "SIDECAR_API_KEY"
                },
                {
                    "name": "SIDECAR_PARAMETERS"
                },
                {
                    "name": "PASSTHROUGH_DATA"
                },
                {
                    "name": "SIDECAR_CA_CERT"
                },
                {
                    "name": "tls-private-key-file"
                },
                {
                    "name": "tls-cert-file"
                }
            ]
        }
    ],
    "parameters": [
        {
            "name": "PASSTHROUGH_DATA",
            "description": "Pass-through JSON data. This data will be made available to the app via vcap_services environment variable.",
            "example": "{ \"name\" : \"value\" }",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "SIDECAR_PARAMETERS",
            "description": "Parameters for the HSM side-car to be supplied to application on bind",
            "default": "PASSTHROUGH_DATA",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "SIDECAR_API_KEY",
            "description": "HSM side-car api key",
            "default": "sidecar-auth-key",
            "example": "sidecar-auth-key",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "SIDECAR_CA_CERT",
            "description": "placeholder",
            "example": "-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----",
            "required": true,
            "secret": false,
            "generator": {
                "id": "cacert",
                "generate": {
                    "value_type": "certificate",
                    "type": "CACertificate"
                }
            }
        },
        {
            "name": "tls-private-key-file",
            "description": "Private certificate string for TLS with endlines preserved with '\n'",
            "example": "-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----",
            "required": false,
            "secret": true,
            "generator": {
                "id": "tls_cert",
                "generate": {
                    "value_type": "private_key",
                    "key_length": 4096,
                    "type": "Certificate"
                }
            }
        },
        {
            "name": "tls-cert-file",
            "description": "Public certificate string for TLS with endlines preserved with '\n'",
            "example": "-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----",
            "required": false,
            "secret": true,
            "generator": {
                "id": "tls_cert",
                "generate": {
                    "value_type": "certificate",
                    "type": "Certificate"
                }
            }
        }
    ]
}
