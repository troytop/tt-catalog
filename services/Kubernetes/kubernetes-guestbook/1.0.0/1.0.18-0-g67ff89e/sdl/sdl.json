{
  "name": "kubernetes-guestbook",
  "product_version": "1.0.0",
  "sdl_version": "1.0.18-0-g67ff89e",
  "vendor": "Kubernetes",
  "volumes": [
    {
      "name": "redis-backup",
      "size_gb": 10,
      "filesystem": "ext4",
      "shared": false
    },
    {
      "name": "frontend-data",
      "size_gb": 10,
      "filesystem": "ext4",
      "shared": false
    }
  ],
  "components": [
    {
      "name": "redis-master",
      "repository": "gcr.io",
      "organization": "google_containers",
      "image": "redis",
      "tag": "e2e",
      "min_RAM_mb": 256,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "workload_type": "container",
      "capabilities": [
        "ALL"
      ],
      "min_instances": 1,
      "max_instances": 1,
      "service_ports": [
        {
          "name": "redis-master",
          "protocol": "TCP",
          "source_port": 6379,
          "target_port": 6379,
          "public": false
        }
      ],
      "volume_mounts": [
        {
          "volume_name": "redis-backup",
          "mountpoint": "/tmp/backup"
        }
      ]
    },
    {
      "name": "redis-worker",
      "repository": "gcr.io",
      "organization": "google_samples",
      "image": "gb-redisslave",
      "tag": "v1",
      "min_RAM_mb": 256,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "workload_type": "container",
      "capabilities": [
        "ALL"
      ],
      "min_instances": 2,
      "max_instances": 2,
      "service_ports": [
        {
          "name": "redis-worker",
          "protocol": "TCP",
          "source_port": 6379,
          "target_port": 6379,
          "public": false
        }
      ],
      "volume_mounts": [],
      "parameters": [
        {
          "name": "GET_HOSTS_FROM"
        },
        {
          "name": "REDIS_MASTER_SERVICE_HOST"
        }
      ]
    },
    {
      "name": "frontend",
      "repository": "gcr.io",
      "organization": "google_samples",
      "image": "gb-frontend",
      "tag": "v1",
      "min_RAM_mb": 256,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "workload_type": "container",
      "capabilities": [
        "ALL"
      ],
      "min_instances": 3,
      "max_instances": 3,
      "service_ports": [
        {
          "name": "frontend",
          "protocol": "TCP",
          "source_port": 80,
          "target_port": 80,
          "public": true
        }
      ],
      "volume_mounts": [
        {
          "volume_name": "frontend-data",
          "mountpoint": "/data"
        }
      ],
      "parameters": [
        {
          "name": "GET_HOSTS_FROM"
        },
        {
          "name": "REDIS_MASTER_SERVICE_HOST"
        },
        {
          "name": "REDIS_WORKER_SERVICE_HOST"
        },
        {
          "name": "example.secret"
        }
      ]
    }
  ],
  "parameters": [
    {
      "name": "GET_HOSTS_FROM",
      "description": "We need to get the host names from the environment due to our naming of services",
      "default": "env",
      "example": "env",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "REDIS_MASTER_SERVICE_HOST",
      "description": "Where the redis-master host is",
      "default": "redis-master-int",
      "example": "redis-master-int",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "REDIS_WORKER_SERVICE_HOST",
      "description": "Where the redis-worker host is",
      "default": "redis-worker-int",
      "example": "redis-worker-int",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "example.secret",
      "description": "This is an example secret - it is not used",
      "example": "secret-value",
      "data_type": "string",
      "required": false,
      "secret": true
    }
  ]
}
