{
  "name": "kubernetes-guestbook",
  "product_version": "1.0.0",
  "sdl_version": "1.0.0",
  "vendor": "TEST",
  "volumes": [
    {
      "name": "redis-backup",
      "size_gb": 10,
      "filesystem": "ext4",
      "shared": false
    },
    {
      "name": "redis-backup2",
      "size_gb": 11,
      "filesystem": "ext4",
      "shared": false
    },
    {
      "name": "frontend-data",
      "size_gb": 10,
      "shared": true
    }
  ],
  "components": [
    {
      "name": "redis-master",
      "version": "1.0.1",
      "vendor": "Kubernetes",
      "image": "redis:2.8",
      "min_RAM_mb": 256,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "workload_type": "container",
      "capabilities": ["ALL"],
      "min_instances": 1,
      "max_instances": 1,
      "service_ports": [
        {
          "name": "redis-master",
          "protocol": "TCP",
          "source_port": 6379,
          "target_port": 6379,
          "public": false
        }
      ],
      "volume_mounts": [
        {
          "volume_name": "redis-backup2",
          "mountpoint": "/tmp/backup2"
        },
        {
          "volume_name": "redis-backup",
          "mountpoint": "/tmp/backup"
        }
      ]
    },
    {
      "name": "redis-worker",
      "version": "1.0.1",
      "vendor": "Kubernetes",
      "repository": "gcr.io",
      "image": "google_samples/gb-redisslave:v1",
      "min_RAM_mb": 256,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "workload_type": "container",
      "capabilities": ["ALL"],
      "min_instances": 2,
      "max_instances": 2,
      "service_ports": [
        {
          "name": "redis-worker",
          "protocol": "TCP",
          "source_port": 6379,
          "target_port": 6379,
          "public": false
        }
      ],
      "volume_mounts": [],
      "parameters": [
        {
          "name": "GET_HOSTS_FROM"
        },
        {
          "name": "REDIS_MASTER_SERVICE_HOST"
        }
      ]
    },
    {
      "name": "frontend",
      "version": "1.0.4",
      "vendor": "Kubernetes",
      "repository": "gcr.io",
      "image": "google_samples/gb-frontend:v4",
      "min_RAM_mb": 256,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "workload_type": "container",
      "capabilities": ["ALL"],
      "min_instances": 3,
      "max_instances": 3,
      "service_ports": [
        {
          "name": "frontend",
          "protocol": "TCP",
          "source_port": 80,
          "target_port": 80,
          "public": true
        }
      ],
      "volume_mounts": [
        {
          "volume_name": "frontend-data",
          "mountpoint": "/data"
        }
      ],
      "parameters": [
        {
          "name": "GET_HOSTS_FROM"
        },
        {
          "name": "REDIS_MASTER_SERVICE_HOST"
        },
        {
          "name": "REDIS_WORKER_SERVICE_HOST"
        },
        {
          "name": "example.secret"
        },
        {
          "name": "example.secret2"
        }
      ]
    }
  ],
  "preflight": [
   {
      "name": "pre-deployment-setup",
      "version": "0.0.0",
      "vendor": "HPE",
      "image": "perl",
      "min_RAM_mb": 1024,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "capabilities": [],
      "min_instances": 1,
      "max_instances": 1,
      "workload_type": "container",
      "retry_count": 5,
      "timeout": 600,
      "entrypoint": [ "perl", "-Mbignum=bpi", "-wle", "print bpi(2000)" ]
    }
  ],
  "parameters": [
    {
      "name": "GET_HOSTS_FROM",
      "description": "We need to get the host names from the environment due to our naming of services",
      "default": "env",
      "example": "env",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "REDIS_MASTER_SERVICE_HOST",
      "description": "Where the redis-master host is",
      "default": "redis-master-int",
      "example": "redis-master-int",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "REDIS_WORKER_SERVICE_HOST",
      "description": "Where the redis-worker host is",
      "default": "redis-worker-int",
      "example": "redis-worker-int",
      "data_type": "string",
      "required": true,
      "secret": false
    },
    {
      "name": "example.secret",
      "description": "This is an example secret - it is not used",
      "example": "secret-value",
      "data_type": "string",
      "required": false,
      "secret": true
    },
    {
      "name": "example.secret2",
      "description": "This is an example secret - it is not used",
      "example": "secret-value2",
      "data_type": "string",
      "required": false,
      "secret": true
    }
  ]
}
